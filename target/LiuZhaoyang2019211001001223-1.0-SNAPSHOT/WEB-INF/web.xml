<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>com.LiuZhaoyang.week6.demo.JdbcServletContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <servlet-class>com.LiuZhaoyang.week4.demo.ConfigdemoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateUser</servlet-name>
        <jsp-file>/WEB-INF/views/updateUser.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateUser</servlet-name>
        <url-pattern>/updateUser.jsp</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>name</param-name>
        <param-value>LiuZhaoyang</param-value>
    </context-param>
    <context-param>
        <param-name>student-id</param-name>
        <param-value>2019211001001223</param-value>
    </context-param>
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:sqlserver://localhost:1433;DatabaseName=userdb</param-value>
    </context-param>
    <context-param>
        <param-name>username</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>123456</param-value>
    </context-param>


    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>com.LiuZhaoyang.week3.demo.LifeCycleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/life</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.LiuZhaoyang.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/hello</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>HelloFilter</filter-name>
        <filter-class>com.LiuZhaoyang.filter.HelloFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HelloFilter</filter-name>
        <url-pattern>/hello</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>HelloServlet</filter-name>
        <filter-class>com.LiuZhaoyang.filter.HelloFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoggerFilter</filter-name>
        <filter-class>com.LiuZhaoyang.filter.LoggerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoggerFilter</filter-name>
        <url-pattern>/hello</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>LiuZhaoyangFilter</filter-name>
        <filter-class>com.lab2.LiuZhaoyangFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LiuZhaoyangFilter</filter-name>
        <url-pattern>/lab2/welcome.jsp</url-pattern>
    </filter-mapping>

</web-app>